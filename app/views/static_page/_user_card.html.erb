
<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <div class="row">
      <div class="col-xs-10">
        <p class="UserCard-email">
          Id: <%= current_user[:id] %>
        </p>
        <p class="UserCard-name">
          Username: <%= current_user[:name] %>
        </p>
        <p class="UserCard-email">
          Email: <%= current_user[:email] %>
        </p>
        <p class="UserCard-email">
          Friends: <%= current_user[:friends] %>
        </p>
        <hr>
        <span class="UserCard-logout">
          <%= link_to "Logout", destroy_user_session_url, method: :delete, class: 'btn btn-sm btn-fb' %>
        </span>
      </div>
    </div>
    <div class="row">
          <hr>
    </div>
  </div>
</div>
